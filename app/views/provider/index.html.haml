.container
  %p.alert.alert-warning= flash[:notice]
  // %p#notice= notice
  %br/
  %h2.float-left{style: 'color: #79589f;'}Provider Panel 
  - if current_user
    = link_to 'Logout', destroy_user_session_path, method: :delete , :class => "sticky-top float-right btn btn-outline-danger",:id => "right"
    %br/
  %br/
  
  %form.form-inline{:action => "", :method => "GET"}
    %input.form-control.mr-sm-2{:name => "search_name","aria-label" => "Search", :placeholder => "Search", :type => "search"}/ 
    // %input{:type => "submit", :value => "Search for Patient"}/
    %input.btn.btn-outline-success.my-2.my-sm-0{:type => "submit", :value => "Search"}/
    // = link_to 'All Patients', root_path , :class => "float-right"
  = link_to 'All Patients', "/login" , :class => "float-right"  
  %br/


  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th MRN
        %th Age
        %th Survey Date
        %th Patient Responses
        %th Patient DashBoard
    %tbody
      - @questions.each do |question|
        %tr
          %td= question.name
          %td= question.mrn
          %td= question.age
          %td= question.created_at
          %td= link_to 'View Survey', question#showtouser
          %td= link_to "Edit Feedback", edit_provider_feedback_path(question)
